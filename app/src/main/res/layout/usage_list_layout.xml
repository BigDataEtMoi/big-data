<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/hourMinView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/appIconView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:gravity="center"
        android:text="TextView" />

    <ImageView
        android:id="@+id/appIconView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/hourMinView"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:textSize="20sp"
        android:id="@+id/appNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/timeAppView"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/appIconView"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/appIconView"
        android:paddingStart="16dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/timeAppView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/appIconView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/appIconView"
        android:paddingStart="16dp"
        android:text="TextView" />
</RelativeLayout>